{
  "name": "mini-state-machine",
  "version": "0.0.0",
  "description": "A miniature state machine",
  "main": "source/index.js",
  "scripts": {
    "build": "webpack --mode production --config webpack.config.js",
    "format": "prettier --write '{source,test}/**/*.js'",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build",
    "test": "run-s test:all test:format",
    "test:all": "nyc mocha -r test/index.js 'test/**/*.spec.js'",
    "test:format": "prettier-check '{source,test}/**/*.js'",
    "test:unit": "mocha -r test/index.js 'test/unit/**/*.spec.js'",
    "test:unit:watch": "nodemon --exec 'npm run test:unit'"
  },
  "lint-staged": {
    "{source,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perry-mitchell/mini-state-machine.git"
  },
  "keywords": [
    "fsm",
    "stm",
    "state",
    "machine",
    "finite",
    "mini",
    "transition"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perry-mitchell/mini-state-machine/issues"
  },
  "homepage": "https://github.com/perry-mitchell/mini-state-machine#readme",
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.1.0",
    "prettier": "^1.15.1",
    "prettier-check": "^2.0.0",
    "sinon": "^7.1.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  }
}
